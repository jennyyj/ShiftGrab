{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },  // Handle API routes
    { "src": "/", "dest": "/public/shiftgrab.html" },  // Default to shiftgrab.html
    { "src": "/(.*)", "dest": "/public/$1" }  // Serve static files from public
  ]
}
